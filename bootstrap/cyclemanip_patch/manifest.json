{
  "description": "Overlay CycleManip (patch-only) code/config into RoboTwin by copying selected paths and overwriting existing files.",
  "copy": [
    {"src": "collect_data.sh", "dst": "collect_data.sh"},
    {"src": "collect_data_loop.sh", "dst": "collect_data_loop.sh"},
    {"src": "delete_pth.sh", "dst": "delete_pth.sh"},

    {"src": "envs", "dst": "envs"},
    {"src": "script", "dst": "script"},
    {"src": "task_config", "dst": "task_config"},
    {"src": "description", "dst": "description"},

    {"src": "data/utils", "dst": "data/utils"}
  ],
  "exclude_globs": [
    ".git/**",
    "assets/**",
    "data/**",
    "data/utils/**/.ipynb_checkpoints/**",
    "**/__pycache__/**",
    "**/*.pyc",
    "**/.DS_Store"
  ],
  "include_override_globs": [
    "data/utils/**"
  ]
}
